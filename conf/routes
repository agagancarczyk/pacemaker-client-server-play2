# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET     /api/users                            controllers.PacemakerAPI.users()
DELETE  /api/users                            controllers.PacemakerAPI.deleteAllUsers()
POST    /api/users                            controllers.PacemakerAPI.createUser()

GET    /api/users/:id                         controllers.PacemakerAPI.user(id: Long)
DELETE /api/users/:id                         controllers.PacemakerAPI.deleteUser(id: Long)
PUT    /api/users/:id                         controllers.PacemakerAPI.updateUser(id: Long)

GET     /api/activities                       controllers.PacemakerAPI.activities()
DELETE  /api/activities                       controllers.PacemakerAPI.deleteAllActivities()
POST    /api/activities                       controllers.PacemakerAPI.createActivity()

GET    /api/activities/:id                    controllers.PacemakerAPI.activity(id: Long)
DELETE /api/activities/:id                    controllers.PacemakerAPI.deleteActivity(id: Long)
PUT    /api/activities/:id                    controllers.PacemakerAPI.updateActivity(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
